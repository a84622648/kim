<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hongb_textview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좌석가장자리에 핸드폰을 태그해주시고 주문할 음식을 선택하세요"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="좌석의 NFC 스티커에 태그해주세요."
            android:onClick="onClick"
            android:id="@+id/editText" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ImageButton
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:id="@+id/Button_send"
        android:text="주문하기"
        android:src="@drawable/jumun"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:text="직원호출"
            android:id="@+id/button4"
            android:src="@drawable/call"
            android:background="#00000000"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp" />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김밥              3000원"
            android:id="@+id/checkBox1"
            android:checked="false"
            android:onClick="onClick"
            android:textSize="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/kimbob"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김치볶음밥    4000원"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:onClick="onClick"
        android:textSize="40dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/kimchi"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:checked="false"
            android:onClick="onClick"
            android:textSize="40dp"
            android:text="돈까스           5000원" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/dongas"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="육개장           6000원"
            android:id="@+id/checkBox4"
            android:checked="false"
            android:onClick="onClick"
            android:textSize="40dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/jang"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라면              7000원"
            android:id="@+id/checkBox5"
            android:checked="false"
            android:onClick="onClick"
            android:textSize="40dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView8"
        android:layout_alignParentLeft="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/noodle"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        </LinearLayout>


        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center">

        </RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1">


            <ScrollView
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="392dp"
                    android:id="@+id/showText_TextView"
                    android:text=""/>
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">


            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint=""
                android:id="@+id/editText_massage"
                android:layout_weight="0.5"
                android:ems="10"
                android:background="@null"
                />

        </LinearLayout>


</LinearLayout>
</ScrollView>